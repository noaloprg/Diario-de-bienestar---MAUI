<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diario_bienestar.ListaRegistros"
             Title="Lista de Registros"
             BackgroundColor="{StaticResource CremaSuave}">

    <CollectionView x:Name="cvRegistros"
                    Margin="50,50,50,50">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical"   />

        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="auto,auto,350,auto,auto"
                      ColumnSpacing="38">
                    <!--boton-->
                    <Button x:Name="btnEliminar" Text="Eliminar" Grid.Row="0"
                            WidthRequest="120" Margin="0,60,0,0" 
                            Clicked="OnBotonClicked" CommandParameter="{Binding}"
                            BackgroundColor="{StaticResource Rojo}" TextColor="{StaticResource RosaPalo}"/>

                    <!--fecha-->
                    <HorizontalStackLayout Grid.Column="1"
                                           Style="{StaticResource horizontalListaReg}">
                        <Label Text="Fecha: "/>
                        <Label Text="{Binding fecha, StringFormat='{0:dd/MM/yyyy}'}"
                               Style="{StaticResource labelListarRegistros}"/>
                    </HorizontalStackLayout>

                    <!--sentimientos-->
                    <VerticalStackLayout Grid.Column="2"
                                           Style="{StaticResource horizontalListaReg}">
                        <Label Text="Anotacion: "/>
                        <Label Text="{Binding sentimientos}"
                               Style="{StaticResource labelListarRegistros}"/>
                    </VerticalStackLayout>

                    <!--actividad fisica-->
                    <HorizontalStackLayout Grid.Column="3"
                                           Style="{StaticResource horizontalListaReg}">
                        <Label Text="Actividad fisica: "/>
                        <Label Text="{Binding nivelActividadFisica, StringFormat='{0.00}'}"
                               Style="{StaticResource labelListarRegistros}"/>
                    </HorizontalStackLayout>

                    <!--nivel energia-->
                    <HorizontalStackLayout Grid.Column="4"
                                           Style="{StaticResource horizontalListaReg}">
                        <Label Text="Nivel energÃ­a: "/>
                        <Label Text="{Binding nivelEnergia}"
                               Style="{StaticResource labelListarRegistros}"/>
                    </HorizontalStackLayout>
                </Grid>

            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>